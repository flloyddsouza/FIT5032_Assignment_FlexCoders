@model FlexCoders_Assignment.Models.Workshop

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom" style="height:100px;">
    <h1>@Html.DisplayFor(model => model.WorkshopName)</h1>
</div>

<div id="map" style="height:300px"></div>

<br />
<br />

<div class="row">
    <div class="col-4">
        <img src="@Url.Content(Model.ImageURL)" width="300" height="150" />
    </div>
    <div class="col-8">
        <p style="text-align: justify;"> @Html.DisplayFor(model => model.WorkShopDescription) </p>
        <div class="row">
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Bookings", new { id = Model.Id })'">
                Register for Workshop
            </button>
        </div>
    </div>
</div>



<div class="col-12 col-sm-6 col-md-8">

    <dl class="dl-horizontal coordinates">

        <dt>
            @Html.DisplayNameFor(model => model.WorkshopDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorkshopDateTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd class="description">
            @Html.DisplayFor(model => model.City)
        </dd>

      

        <dd class="latitude" hidden>
            @Html.DisplayFor(model => model.Lat)
        </dd>

      

        <dd class="longitude"  hidden>
            @Html.DisplayFor(model => model.Long)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Capicity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Capicity)
        </dd>


    </dl>
   
</div>

<br />
<br />
<p>
    @if (User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
        <h>|</h>
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
        <h>|</h>
    }
    @Html.ActionLink("Back to List", "Index")
</p>>

