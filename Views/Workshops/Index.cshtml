@model IEnumerable<FlexCoders_Assignment.Models.Workshop>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Workshops</h2>


@if (User.IsInRole("Administrator"))
{
    <p> @Html.ActionLink("Create New", "Create") </p>
}

<hr />

<div class="card-columns">


    @foreach (var item in Model)
    {

        <div class="card bg-light mb-3" style="width: 300px;">

            <a href="@Url.Action("Details", "Workshops", new { id = item.Id })">
                <img class="card-img-top" src=@item.ImageURL alt="Card image cap" width="200" height="112">
                <div class="card-body">
                    <h5 class="card-title">@item.WorkshopName</h5>


                </div>
            </a>
        </div>
    }
</div>

