@{
    ViewBag.Title = "Home Page";
}
<main role="main">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/photo-1484417894907-623942c8ee29.jpg" />
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h1>FlexCoders</h1>
                        <p>Compiled list of Youtube Videos from the best at Flexcoders.</p>
                        <p><a class="btn btn-lg btn-primary" href="@Url.Action("Index", "Courses")" role="button">Browse Courses</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/photo-1569012871812-f38ee64cd54c.jpg" />                
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Learning at your Fingertips</h1>
                        <p>Browse from a vast number of Courses and Workshops to learn from and enhance your skills today. No prerequisites and absolutely free!</p>
                        <p><a class="btn btn-lg btn-primary" href="@Url.Action("Login", "Account")" role="button">Sign up today</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">


                <img src="~/Images/programming-101-workshop.jpg" />
                <div class="container">
                    <div class="carousel-caption text-right">
                        <h1>Workshops</h1>
                        <p>Learn more about workshops conducted in your city</p>
                        <p><a class="btn btn-lg btn-primary" href="@Url.Action("Index", "Workshops")" role="button">Browse Workshops</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">Beginners Courses</h2>
                <p class="lead">Learn basic Java, Python and C from the beginners courses.These are designed specially for newbie programmers </p>
            </div>
            <div class="col-md-5">
                <img src="~/Images/most-popular-programming-languages-of-2018-1280x720.png" width="300" height="300"/>
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading">Mobile Application Development <span class="text-muted">See for yourself.</span></h2>
                <p class="lead">Learn Mobile Application Development and design your own apps. Learn Android and iOS development in simple steps.</p>
            </div>
            <div class="col-md-5 order-md-1">
                <img src="~/Images/ios-14__ck3ddhhzecuq_og.png" width="300" height="300" />
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">Web Development</h2>
                <p class="lead">Learn Various Web Technologies like REACT, Angular, DOT NET. Develop your own websites.</p>
            </div>
            <div class="col-md-5">

                <img src="~/Images/1567584871web-development.jpeg" width="300" height="300" />
            </div>
        </div>

       

        <!-- /END THE FEATURETTES -->

    </div><!-- /.container -->

 
</main>