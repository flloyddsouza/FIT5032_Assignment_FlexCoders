@model IEnumerable<FlexCoders_Assignment.Models.Bookings>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom" style="height:100px;">
    <h1>Bookings</h1>
</div>

<div id="calendar"></div>
<div style="display: none">

    <table class="table">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workshopID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workshopName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="events">
                <td>
                    @Html.DisplayFor(modelItem => item.userID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.workshopID)
                </td>
                <td class="start">
                    @Html.DisplayFor(modelItem => item.dateAndTime)
                </td>
                <td class="title">
                    @Html.DisplayFor(modelItem => item.workshopName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/fullcalendar")
}