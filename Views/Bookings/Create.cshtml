@model FlexCoders_Assignment.Models.Bookings

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom" style="height:100px;">
    <h1>Book Workshop</h1>
</div>


<div class="col-md-7 center">
    <div class="card">
        <div class="card-header">
            Alert
        </div>
        <div class="card-body">
            <h5 class="card-title">Do you want to book this workshop ?</h5>
            <div class="d-flex bd-highlight mb-3">
                <div class="mr-auto p-2 bd-highlight">
                    <a href="javascript: history.go(-1)" class="btn btn-primary">Cancel</a>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.DropDownList("workshopID", null, htmlAttributes: new { @class = "form-control", style = "display:none" })
                    @Html.DropDownList("dateAndTime", null, htmlAttributes: new { @class = "form-control", style = "display:none" })
                    @Html.DropDownList("workshopName", null, htmlAttributes: new { @class = "form-control", style = "display:none" })
                    <input type="submit" value="Book" class="btn btn-success" />
                }

            </div>


        </div>
    </div>
</div>







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}